.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.book-list {
  width: 100%;
}

.book-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.book-info {
  flex: 1;
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.book-author {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.book-price {
  font-size: 28rpx;
  color: #e51c23;
  margin-top: 10rpx;
}


.donut-container {
	padding-top: 200rpx;
}
